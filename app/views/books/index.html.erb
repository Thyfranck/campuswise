<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Loan Price</th>
      <th>Available</th>
      <th>Available From</th>
      <th>Returning Date</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title%> </td>
        <% if book.image.present?  %>
        <td><%= image_tag book.image_url(:thumb) %></td>
        <% else %>
        <td><%= image_tag 'no_book_image.jpeg', :style => "width: 50px; height: 50px;"%></td>
        <% end %>
        <td><%= book.loan_price %></td>
        <td><%= book.available == true ? "Yes" : "No" %></td>
        <td><%= book.available_from %></td>
        <td><%= book.returning_date %></td>
        <td>
          <%#= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_book_path(book), :class => 'btn btn-mini' %>
          <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
            book_path(book),
            :method => :delete,
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
            :class => 'btn btn-mini btn-danger' %>
          <%= link_to t('.show', :default => t("helpers.links.show")),
            book_path(book), :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "New", new_book_path, :class => "btn btn-primary" %>