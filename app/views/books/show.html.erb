<div class="page-header">
  <h1>Book Details</h1>
</div>

<div class="span4 ">
  <p>
    <b> Title:</b>
    <%= @book.title %>
  </p>

  <p>
    <b> Author:</b>
    <%= @book.author %>
  </p>

  <p>
    <b> Publisher:</b>
    <%= @book.publisher %>
  </p>

  <p>
    <b> ISBN:</b>
    <%= @book.isbn %>
  </p>

  <p>
    <b> Price:</b>
    <%= @book.price %>
  </p>

  <p>
    <b> Loan Price:</b>
    <%= @book.loan_price %>
  </p>

  <p>
    <b> Available:</b>
    <%= @book.available == true ? "Yes" : "No" %>
  </p>

  <p>
    <b> Available from:</b>
    <%= @book.available_from %>
  </p>

  <p>
    <b> Returning Date:</b>
    <%= @book.returning_date %>
  </p>
  <% if current_user and @book.user_id == current_user.id %>
    <div class="form-actions">
      <%= link_to t('.back', :default => t("helpers.links.back")),
        books_path, :class => 'btn'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
        edit_book_path(@book), :class => 'btn' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
        book_path(@book),
        :method => 'delete',
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
        :class => 'btn btn-danger' %>
    </div>
  <% elsif current_user and current_user.already_borrowed_this_book(@book.id) %>
  You Already borrowed this book
  <% elsif current_user %>
  <%= link_to "Borrow This Book", exchanges_path(:id => @book.id), :method => :post ,:confirm => "Are You sure want to borrow this book? $ #{@book.loan_price.present? ? @book.loan_price : "0"} will be deducted from your account.",:class => 'btn btn-primary'  %>
  <br/>
  <br/>
  <h4>Rent this book now and save your money!</h4>
  <%= link_to 'Sign Up!', new_user_path, :class => 'btn btn-primary' %>
  <% end %>
</div>

<div class="span3 offset1">
  <p>
    <%  if @book.image.present?  %>
      <%= image_tag @book.image_url%>
    <% else %>
      <%= image_tag 'no_book_image.jpeg', :class => "no_book_image"  %>
    <% end %>
  </p>
</div>



