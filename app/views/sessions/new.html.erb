<div class="span3"></div>
<div class="span5">
  <%= form_tag sessions_path, :method => :post, :class => 'form-horizontal' do %>
    <fieldset>
      <legend>Login</legend>
      <div class="control-group">
        <%= label_tag :email, "Email", :class => 'control-label' %>
        <div class="controls">
          <%= text_field_tag :email, nil, :required => true %>
        </div>
      </div>

      <div class="control-group">
        <%= label_tag :password, "Password", :class => 'control-label'%>
        <div class="controls">
          <%= password_field_tag :password, nil, :required => true %>
        </div>
      </div>

      <div class="form-actions <%= "no_background_color" unless current_user %>">
        <%= submit_tag "Login", :class => 'btn btn-primary have_a_account' %>
        <%= link_to 'I Forgot My Password', new_password_reset_path(:school => @school), :class => "btn pull-right have_a_account"  %>
      </div>

      <br/><br/>
      Don't have an account? Please
      <%= link_to "sign up now", new_user_path %>.
    </fieldset>
  <% end %>
</div>
<div class="span4"></div>