<div class="container">
  <div class="row">
    <div class="span12">
      <h3>Login</h3>
      <br/>
      <%= form_tag sessions_path, :method => :post,:class => 'form-horizontal' do %>

        <div class="control-group">
          <%= label_tag :email, "Email",:class => 'control-label' %>
          <div class="controls">
            <%= text_field_tag :email %>
          </div>
        </div>

        <div class="control-group">
          <%= label_tag :password, "Password",:class => 'control-label'%>
          <div class="controls">
            <%= password_field_tag :password %>
          </div>
        </div>

        <div class="form-actions">
          <%= submit_tag "Login", :class => 'btn btn-primary' %><br/>
          <br/>
          <%= link_to "I Dont have a account?", new_user_path(:school => @school) %><br/>
          <%= link_to 'Forgot Password?', new_password_reset_path(:school => @school) %>
        </div>
      <% end %>
    </div>
  </div>
</div>