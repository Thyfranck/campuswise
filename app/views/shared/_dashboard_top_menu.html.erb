    <a class="dropdown-toggle" href="#" data-toggle="dropdown">
      Payment Information
      <b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
      <% if current_user.billing_setting.present? %>
        <li class="<%= "active" if current_page?(billing_setting_path(current_user.billing_setting)) %>">
          <%= link_to "Payment Settings", billing_setting_path(current_user.billing_setting) %>
        </li>
      <% else %>
        <li class="<%= "active" if current_page?(new_billing_setting_path) %>">
          <%= link_to "Payment Settings", new_billing_setting_path %>
        </li>
      <% end %>
      <li>
        <%= link_to "Total Balance", '#' %>
      </li>
      <li>
        <%= link_to "Withdraw balance", '#' %>
      </li>
