<div class="container-fluid" id="books-slider">
  <div class="container">
    <div class="row span10 offset1">
      <div class="row" id="books-slider-head">
        <div class="span2 nav-link active">
          <a href="javascript:;">JUST NOW</a>
        </div>
        <div class="span2 nav-link">
          <a href="javascript:;">POPULAR</a>
        </div>
      </div>
      <div class="row">
        <div class="carousel slide" id="myCarousel">
          <div class="carousel-inner">
            <div class="item active">
              <ul class="thumbnails">
                <% Book.limit(3).offset(2).each do |book| %>
                <li class="span4">
                  <div class="slide-content offset3">
                    <div class="slider_book_image span3">
                      <%= image_tag book.image_url(:book) %>
                    </div>
                    <div class="slider_book_text span7">
                      <%= book.title.truncate(50) %><br/>
                      by <%= book.author.truncate(50) %>
                    </div>
                  </div>
                </li>
                <% end %>
              </ul>
            </div>
            <div class="item">
              <ul class="thumbnails">
                <li class="span4">
                  <div class="slide-content offset3">
                    <div class="slider_book_image span3">

                    </div>
                    <div class="slider_book_text  span7">

                    </div>
                  </div>
                </li>
                <li class="span4">
                  <div class="slide-content offset1">
                    <div class="slider_book_image span3">

                    </div>
                    <div class="slider_book_text span8">

                    </div>
                  </div>
                </li>
                <li class="span4">
                  <div class="slide-content">
                    <div class="slider_book_image span3">

                    </div>
                    <div class="slider_book_text  span7">

                    </div>
                  </div>
                </li>
              </ul>
            </div>
            <div class="item">
              <ul class="thumbnails">
                <li class="span4">
                  <div class="slide-content offset3">
                    <div class="slider_book_image span3">

                    </div>
                    <div class="slider_book_text  span7">

                    </div>
                  </div>
                </li>
                <li class="span4">
                  <div class="slide-content offset1">
                    <div class="slider_book_image span3">

                    </div>
                    <div class="slider_book_text span8">

                    </div>
                  </div>
                </li>
                <li class="span4">
                  <div class="slide-content">
                    <div class="slider_book_image span3">

                    </div>
                    <div class="slider_book_text  span7">
                    </div>
                  </div>
                </li>
              </ul>
            </div>
          </div>
          <a class="carousel-control left" href="#myCarousel" data-slide="prev">‹</a>
          <a class="carousel-control right" href="#myCarousel" data-slide="next">›</a>
        </div>
      </div>
    </div>
  </div>
</div>