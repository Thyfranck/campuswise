<div class="span3"></div>
<div class="span5">
  <fieldset>
    <legend>Phone Verification</legend>
    <%= form_tag verify_code_user_path(@user), :class => "form-horizontal" do %>
      <div class="control-group">
        <div class="controls">
          <%= text_field_tag :code, nil ,:placeholder => "Enter the code received by sms" %>
          <%= submit_tag "Verify", :class => "btn btn-primary search_button" %>
          <br/><br/>
          <%= link_to "Not found SMS? Send Again!", send_verification_sms_user_path(@user) %>
        </div>
      </div>
    <% end %>
  </fieldset>
</div>
