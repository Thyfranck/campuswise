<div class="span3"></div>
<div class="span5">

  <%= form_for @user, :url => create_password_user_path(@user), :html => { :class => 'form-horizontal' } do |f| %>
    <fieldset>
      <legend>
        Create Password
      </legend>

      <% if @user.errors.any? %>
        <div id="error_explanation" class="alert alert-error">
          <h4>
            Please correct following <%= pluralize(@user.errors.count, "field") %>:
          </h4>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="control-group">
        <%= f.label :password, :class => 'control-label' %>
        <div class="controls">
          <%= f.password_field :password, :class => 'text_field',:required => true %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :password_confirmation, :class => 'control-label' %>
        <div class="controls">
          <%= f.password_field :password_confirmation, :class => 'text_field', :required => true %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit "Submit", :class => 'btn btn-primary have_a_account' %>
      </div>
    <% end %>
  </fieldset>


</div>
<div class="span4"></div>