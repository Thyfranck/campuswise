<% if @notifications.any? %>
  <% @notifications.each do |notification| %>
    <div>
      <%= notification.content.html_safe %>
      <% if notification.exchange.present? and notification.exchange.user_id != current_user.id  %>
        <%= link_to "Approve", exchange_path(notification.exchange_id), :method => :put, :class => "btn btn-small btn-primary" %>
        <%= link_to "Deny", exchange_path(notification.exchange_id), :method => :delete, :class => "btn btn-small btn-primary" %>
      <% else %>
        <%= link_to "Remove", remove_notification_path(:id => notification.id), :method => :delete, :class => "btn btn-small btn-primary" %>
      <% end %>
    </div>
  <% end %>
<% else %>
  <h4>No new Notifications.</h4>
<% end %>