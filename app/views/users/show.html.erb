<div class="container" >
  <div class="row">
    <div class="span3 offset1">
      <div class="well sidebar">
        <div class="nav nav-list">
          <li class="nav-header">Account Information</li>
          <li><%= link_to "Show Profile", user_path(current_user)  %></li>
          <li><%= link_to "Edit Profile", edit_user_path(current_user)  %></li>
          <li class="nav-header">Books Information</li>
          <li><%= link_to "My books", books_path %></li>
          <li><%= link_to "Borrow Request", '#' %></li>
          <li class="nav-header">Payment Information</li>
          <li><%= link_to "Total Balance", '#' %></li>
          <li><%= link_to "Withdraw balance", '#' %></li>
        </div>
      </div>
    </div>


    <div class="span7 offset0 well">
      <%- model_class = User -%>
      <div class="page-header">
        <h1><%=t '.title', :default => model_class.model_name.human %></h1>
      </div>

      <dl class="dl-horizontal">
        <dt><strong><%= model_class.human_attribute_name("School Name") %>:</strong></dt>
        <dd><%= @user.school.name %></dd>
        <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
        <dd><%= @user.email %></dd>
        <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
        <dd><%= @user.name %></dd>
        <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
        <dd><%= @user.phone %></dd>
        <dt><strong><%= model_class.human_attribute_name(:facebook) %>:</strong></dt>
        <dd><%= @user.facebook %></dd>
      </dl>
    </div>

  </div>
</div>