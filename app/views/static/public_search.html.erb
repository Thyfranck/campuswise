<div class="span8 offset2">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Image</th>
        <th>Loan Price</th>
        <th>Available</th>
        <th>Available From</th>
        <th>Returning Date</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title%> </td>
          <% if book.image.present?  %>
            <td><%= image_tag book.image_url(:thumb) %></td>
          <% else %>
            <td><%= image_tag 'no_book_image.jpeg', :style => "width: 50px; height: 50px;"%></td>
          <% end %>
          <td><%= book.loan_price %></td>
          <td><%= book.available == true ? "Yes" : "No" %></td>
          <td><%= book.available_from %></td>
          <td><%= book.returning_date %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
