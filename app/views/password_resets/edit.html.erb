<div class="span3"></div>
<div class="span5">
  <%= form_for @user, :url => password_reset_path(@user), :html => {:method => :put, :class => 'form-horizontal'} do |f| %>
    <fieldset>
      <legend>Choose a new password</legend>
      <% if @user.errors.any? %>
        <div id="error_explanation" class="alert alert-error">
          <h4>
            <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
          </h4>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="control-group">
        <%= f.label :email,:class => 'control-label' %>
        <div class="controls">
          <%= @user.email %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :password, "Password",:class => 'control-label'%>
        <div class="controls">
          <%= f.password_field :password %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :password_confirmation,:class => 'control-label'%>
        <div class="controls">
          <%= f.password_field :password_confirmation %>
          <%= hidden_field_tag :token, @token %>
        </div>
      </div>

      <div class="form-actions no_background_color">
        <%= submit_tag "Change My password", :class => 'btn btn-primary' %>
      </div>
    </fieldset>
  <% end %>
</div>
<div class="span4"></div>