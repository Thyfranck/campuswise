<h3 class="form_headers">Enter Your Email Address</h3>
<%= form_tag password_resets_path, :class => 'form-horizontal', :method => :post do %>
  <div class="control-group">
    <%= label_tag :email, "Email",:class => 'control-label' %>
    <div class="controls">
      <%= email_field_tag :email %>
    </div>
  </div>

  <div class="form-actions">
    <%= submit_tag "Reset my password!", :class => 'btn btn-primary' %><br/>
  </div>
<% end %>