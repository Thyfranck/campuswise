<div class="span3"></div>
<div class="span5">
  <%= form_tag password_resets_path, :class => 'form-horizontal', :method => :post do %>
    <fieldset>
      <legend>Enter Your Email Address</legend>
      <div class="control-group">
        <%= label_tag :email, "Email",:class => 'control-label' %>
        <div class="controls">
          <%= email_field_tag :email, nil ,:required => true %>
        </div>
      </div>
      <div class="form-actions no_background_color">
        <%= submit_tag "Reset my password!", :class => 'btn btn-primary' %>
      </div>
    </fieldset>
  <% end %>
</div>
<div class="span4"></div>